# $ git clone https://github.com/progman/gitbash.git ~/.config/gitbash;
# $ echo "source ~/.config/gitbash/gitbash" >> ~/.bashrc;
#-------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------#
function git_url()
{
	local STATUS;
	local URL;


	if [ "$(which git)" == "" ] || [ "$(which grep)" == "" ] || [ "$(which sed)" == "" ];
	then
		return 0;
	fi


	if [ "${1}" != "" ];
	then
		git remote set-url origin "${1}" &> /dev/null;
		if [ "${?}" != "0" ];
		then
# maybe set-url is not exist
			if [ "$(git remote | grep origin | wc -l | { read COL1; echo ${COL1}; })" != "0" ];
			then
				git remote rm origin &> /dev/null; # obsolete
				git remote remove origin &> /dev/null;
			fi

			git remote add origin "${1}" &> /dev/null;
		fi
	fi


	if [ "$(git remote | grep origin | wc -l | { read COL1; echo ${COL1}; })" != "0" ];
	then
		URL=$(git remote get-url origin 2> /dev/null);
		if [ "${?}" != "0" ];
		then
# maybe get-url is not exist
			URL=$(git config -l | grep remote.origin.url | sed -e 's/remote.origin.url=//g');
		fi

		if [ "${URL}" != "" ];
		then
			echo "git clone ${URL}";
			echo "";
		fi
	fi


	return 0;
}
#-------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------#
function git_add_all()
{
	local STATUS;
	local BRANCH;
	local CUR_DIR;
	local COMMIT;
	local DIR;
	local COMMIT_NEW;


	if [ "$(which git)" == "" ] || [ "$(which head)" == "" ] || [ "$(which grep)" == "" ] || [ "$(which sed)" == "" ];
	then
		return 0;
	fi


	BRANCH="$(git rev-parse --abbrev-ref HEAD 2>/dev/null)";
	if [ "${BRANCH}" == "" ];
	then
		return 0;
	fi


	CUR_DIR="${PWD}";
	COMMIT="$(git log 2> /dev/null | head -n 1 | grep commit)";


	while true;
	do
		DIR="${PWD}";
		cd ..;
		COMMIT_NEW="$(git log 2> /dev/null | head -n 1 | grep commit)";

		if [ "${COMMIT_NEW}" != "${COMMIT}" ];
		then
			cd -- "${DIR}";
			git add .
			cd -- "${CUR_DIR}";
			break;
		fi
	done


	return 0;
}
#-------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------#
function git_pwd()
{
	local STATUS;
	local BRANCH;
	local CUR_DIR;
	local COMMIT;
	local DIR;
	local COMMIT_NEW;


	if [ "$(which git)" == "" ] || [ "$(which head)" == "" ] || [ "$(which grep)" == "" ] || [ "$(which sed)" == "" ];
	then
		return 0;
	fi


	BRANCH="$(git rev-parse --abbrev-ref HEAD 2>/dev/null)";
	if [ "${BRANCH}" == "" ];
	then
		return 0;
	fi


	CUR_DIR="${PWD}";
	COMMIT="$(git log 2> /dev/null | head -n 1 | grep commit)";


	while true;
	do
		DIR="${PWD}";
		cd ..;
		COMMIT_NEW="$(git log 2> /dev/null | head -n 1 | grep commit)";

		if [ "${COMMIT_NEW}" != "${COMMIT}" ];
		then
			echo "${DIR}";
			cd -- "${CUR_DIR}";
			break;
		fi
	done


	return 0;
}
#-------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------#
function git_cd()
{
	local STATUS;
	local GIT_PWD;


	if [ "$(which git)" == "" ] || [ "$(which head)" == "" ] || [ "$(which grep)" == "" ] || [ "$(which sed)" == "" ];
	then
		return 0;
	fi

	GIT_PWD="$(git_pwd)";
	if [ "${GIT_PWD}" == "" ];
	then
		return 0;
	fi

	cd -- "${GIT_PWD}";


	return 0;
}
#-------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------#
function git_gc()
{
	local STATUS;
	local BRANCH;
	local COL1;
	local COL2;
	local OLD;
	local NEW;
	local P;


	if [ "$(which git)" == "" ] || [ "$(which grep)" == "" ] || [ "$(which sed)" == "" ] || [ "$(which du)" == "" ];
	then
		return 0;
	fi


	BRANCH="$(git rev-parse --abbrev-ref HEAD 2>/dev/null)";
	if [ "${BRANCH}" == "" ];
	then
		return 0;
	fi


	OLD=$(du -sb | { read COL1 COL2; echo ${COL1}; });


	git gc --aggressive --prune=now &> /dev/null;
	STATUS="${?}";
	if [ "${STATUS}" != "0" ];
	then
		return "${STATUS}";
	fi


	NEW=$(du -sb | { read COL1 COL2; echo ${COL1}; });


	(( P = 0 - (100 - (NEW / ( OLD / 100 ))) ));


	echo "${OLD} -> ${NEW} (${P}%)";


	return 0;
}
#-------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------#
function git_merge()
{
	local STATUS;


	if [ "${1}" == "" ];
	then
		echo "ERROR: missing branch name";
		return 0;
	fi


	echo "git merge --no-ff ${1} -m 'merge branch \"${1}\"'";
	git merge --no-ff ${1} -m "merge branch \"${1}\"";
	STATUS="${?}";
	if [ "${STATUS}" != "0" ];
	then
		return "${STATUS}";
	fi


	return 0;
}
#-------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------#
function git_pull()
{
	local STATUS;
	local BRANCH;


	if [ "$(git_url)" == "" ];
	then
		echo "ERROR: remote repository is not set";
		return 0;
	fi


	if [ "$(which git)" == "" ] || [ "$(which grep)" == "" ] || [ "$(which sed)" == "" ];
	then
		return 0;
	fi


	BRANCH="$(git rev-parse --abbrev-ref HEAD 2>/dev/null)";
	if [ "${BRANCH}" == "" ];
	then
		return 0;
	fi


	echo "git fetch -ap";
	git fetch -ap;
	STATUS="${?}";
	if [ "${STATUS}" != "0" ];
	then
		return "${STATUS}";
	fi


	echo "git pull origin ${BRANCH}";
	git pull origin "${BRANCH}";
	STATUS="${?}";
	if [ "${STATUS}" != "0" ];
	then
		return "${STATUS}";
	fi


	echo "git submodule update --init --recursive";
	git submodule update --init --recursive;
	STATUS="${?}";
	if [ "${STATUS}" != "0" ];
	then
		return "${STATUS}";
	fi


	return 0;
}
#-------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------#
function git_push()
{
	local STATUS;
	local BRANCH;


	if [ "$(git_url)" == "" ];
	then
		echo "ERROR: remote repository is not set";
		return 0;
	fi


	if [ "$(which git)" == "" ] || [ "$(which grep)" == "" ] || [ "$(which sed)" == "" ];
	then
		return 0;
	fi


	BRANCH="$(git rev-parse --abbrev-ref HEAD 2>/dev/null)";
	if [ "${BRANCH}" == "" ];
	then
		return 0;
	fi


	echo "git push -u origin ${BRANCH}";
	git push -u origin "${BRANCH}";
	STATUS="${?}";
	if [ "${STATUS}" != "0" ];
	then
		return "${STATUS}";
	fi


	return 0;
}
#-------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------#
function git_commit()
{
	local STATUS;
	local LOCAL_TMPDIR="/tmp";
	local TMP;
	local val;
	local GIT_STATUS="";


	if [ "$(which git)" == "" ] || [ "$(which grep)" == "" ] || [ "$(which mktemp)" == "" ];
	then
		return 0;
	fi


# check git repo
	BRANCH="$(git branch 2>/dev/null)";
	if [ "${?}" != "0" ];
	then
		return 0;
	fi


# create temp dir and files
	if [ "${TMPDIR}" != "" ] && [ -d "${TMPDIR}" ];
	then
		LOCAL_TMPDIR="${TMPDIR}";
	fi


	TMP=$(mktemp "${LOCAL_TMPDIR}"/gitbash.XXXXXXXXXX);
	if [ "${?}" != "0" ];
	then
		return 0;
	fi


	while true;
	do
		git status --porcelain 2> /dev/null > "${TMP}";
		STATUS="${?}";
		if [ "${STATUS}" != "0" ];
		then
			rm -rf -- "${TMP}";
			return "${STATUS}";
		fi

		if [ "$(grep -v '^??' "${TMP}" | wc -l | { read val; echo ${val}; })" != "0" ];
		then
			GIT_STATUS="(+)";
			break;
		fi

		break;
	done


	rm -rf -- "${TMP}";


	if [ "${GIT_STATUS}" == "" ];
	then
		echo "there is nothing to commit";
		return 0;
	fi


	if [ "${1}" == "" ];
	then
		echo "git commit -a -m 'update'";
		git commit -a -m 'update';
		STATUS="${?}";
		if [ "${STATUS}" != "0" ];
		then
			return "${STATUS}";
		fi
	else
		echo "git commit -a -m \"${1}\"";
		git commit -a -m "${1}";
		STATUS="${?}";
		if [ "${STATUS}" != "0" ];
		then
			return "${STATUS}";
		fi
	fi


	return 0;
}
#-------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------#
function git_sync()
{
	local STATUS;


	if [ "$(git_url)" == "" ];
	then
		echo "ERROR: remote repository is not set";
		return 0;
	fi


	if [ "$(which git)" != "" ];
	then
		git_pull;
		STATUS="${?}";
		if [ "${STATUS}" != "0" ];
		then
			return "${STATUS}";
		fi

		git_push;
		STATUS="${?}";
		if [ "${STATUS}" != "0" ];
		then
			return "${STATUS}";
		fi
	fi


	return 0;
}
#-------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------#
function git_flush()
{
	local STATUS;


	if [ "$(which git)" == "" ];
	then
		return 0;
	fi


	git_commit "${1}";
	STATUS="${?}";
	if [ "${STATUS}" != "0" ];
	then
		return "${STATUS}";
	fi


	git_sync;
	STATUS="${?}";
	if [ "${STATUS}" != "0" ];
	then
		return "${STATUS}";
	fi


	return 0;
}
#-------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------#
function gitbash()
{
	local STATUS;


	if [ -e ~/.config/gitbash/README ] && [ -e ~/.config/gitbash/HELP ];
	then
		cat ~/.config/gitbash/README ~/.config/gitbash/HELP;
		return 0;
	fi


	if [ -e ~/.config/gitbash.git/README ] && [ -e ~/.config/gitbash.git/HELP ];
	then
		cat ~/.config/gitbash.git/README ~/.config/gitbash.git/HELP;
		return 0;
	fi


	return 0;
}
#-------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------#
function gitbash_help()
{
	local STATUS;


	gitbash;


	return 0;
}
#-------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------#
function gitbash_update()
{
	local STATUS;
	local CUR_PWD="${PWD}";


	if [ -e ~/.config/gitbash ];
	then
		cd ~/.config/gitbash;
	fi


	if [ -e ~/.config/gitbash.git ];
	then
		cd ~/.config/gitbash.git;
	fi


	git_pull;
	STATUS="${?}";
	if [ "${STATUS}" != "0" ];
	then
		return "${STATUS}";
	fi


	cd -- "${CUR_PWD}";


	return 0;
}
#-------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------#
function gitbash_get_branch()
{
	local STATUS;
	local BRANCH;
	local LOCAL_TMPDIR="/tmp";
	local TMP;
	local GIT_STATUS_SUBMODULE="";
	local GIT_STATUS="";
	local A;
	local B;
	local C;
	local TRASH;


	if [ "$(which git)" == "" ] || [ "$(which grep)" == "" ] || [ "$(which sed)" == "" ] || [ "$(which mktemp)" == "" ];
	then
		return 0;
	fi


# create temp dir and files
	if [ "${TMPDIR}" != "" ] && [ -d "${TMPDIR}" ];
	then
		LOCAL_TMPDIR="${TMPDIR}";
	fi


# make tmp file
	TMP=$(mktemp "${LOCAL_TMPDIR}"/gitbash.XXXXXXXXXX);
	if [ "${?}" != "0" ];
	then
		return 0;
	fi


# get branch name
	git branch 2> /dev/null > "${TMP}";
	if [ "${?}" != "0" ];
	then
		rm -rf -- "${TMP}";
		return 0;
	fi
	BRANCH=$(grep '^\*' "${TMP}" | sed -e 's/^\*\ //g');


	if [ "${BRANCH}" == "" ];
	then
		if [ -e .git/HEAD ];
		then
			BRANCH=$(cat .git/HEAD | sed -e 's/ref:\ refs\/heads\///g');
		fi
	fi


	if [ "${BRANCH}" == "" ];
	then
		BRANCH="?";
	fi


# get repo status
	git status --porcelain=v2 2> /dev/null > "${TMP}";
	STATUS="${?}";
	if [ "${STATUS}" != "0" ];
	then
		GIT_STATUS="(git needs update)";
	fi


	if [ "${GIT_STATUS}" == "" ];
	then
		while read -r A B C TRASH;
		do

			if [ "${A}" == "?" ];
			then

				if [ "${GIT_STATUS}" == "" ];
				then
					if [ "${GITBASH_FLAG_UNTRACKED}" != "false" ];
					then
						GIT_STATUS="-";
					fi
				fi

			fi


			if [ "${A}" != "?" ];
			then

				if [ "${C}" == "N..." ];
				then
					GIT_STATUS="+";
				fi

				if [ "${C}" != "N..." ];
				then

					if [ "${C}" == "S..U" ];
					then
						if [ "${GIT_STATUS_SUBMODULE}" == "" ];
						then
							if [ "${GITBASH_FLAG_UNTRACKED}" != "false" ];
							then
								GIT_STATUS_SUBMODULE="s";
							fi
						fi
					fi

					if [ "${C}" != "S..U" ];
					then
						GIT_STATUS_SUBMODULE="S";
					fi

				fi

			fi

		done < "${TMP}";


		if [ "${GIT_STATUS_SUBMODULE}" != "" ] || [ "${GIT_STATUS}" != "" ];
		then
			GIT_STATUS="(${GIT_STATUS_SUBMODULE}${GIT_STATUS})";
		fi
	fi


	rm -rf -- "${TMP}";


	if [ "${GITBASH_FLAG_COLOR}" == "true" ];
	then
		echo -en "\033[32m";
	fi

	echo -en "[";
	echo -en "${GIT_STATUS}";
	echo -en "git::${BRANCH}";
	echo -en "]";

	if [ "${GITBASH_FLAG_COLOR}" != "false" ];
	then
		echo -en "\033[0m";
	fi

	echo -en " ";


	return 0;
}
#-------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------#
function gitbash_get_status()
{
	local SHELL_STATUS="${?}";
	local STATUS;
	local RESULT;


	if [ "${SHELL_STATUS}" != "0" ] && [ "${GITBASH_FLAG_SHELL_STATUS_ENABLE}" != "false" ];
	then
		RESULT+="{${SHELL_STATUS}} ";
	fi

	if [ "$(which date)" != "" ] && [ "${GITBASH_FLAG_DATE_ENABLE}" == "true" ];
	then
		RESULT+="$(date +'%Y%m%d%H%M%S') ";
	fi

	RESULT+="$(gitbash_get_branch)";

	echo "${RESULT}${USER}@${HOSTNAME}";


	return 0;
}
#-------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------#
# GITBASH_FLAG_COLOR='false';
# GITBASH_FLAG_UNTRACKED='true';
# GITBASH_FLAG_SHELL_STATUS_ENABLE='true';
# GITBASH_FLAG_DATE_ENABLE='false';

if [ "${USER}" == "root" ];
then
	export PS1='$(gitbash_get_status):\w# ';
else
	export PS1='$(gitbash_get_status):\w$ ';
fi
#-------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------#
